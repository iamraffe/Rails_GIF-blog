<h1>Best GIF Posts</h1>

<%= link_to("New GIF Post", new_post_path) %>

<ul>

  <% @posts.each do |post| %>
    <li>
      <div>
        <div class="post-title"><h2><%= post.title %></h2></div>
        <div class="post-gif"><img src="<%= post.gif %>"></div>
        <div class="post-votes"><%= post.votes %></div>
      </div>
    </li>

  <% end %>

</ul>
